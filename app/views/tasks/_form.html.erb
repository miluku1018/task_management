<% if task.errors.any? %>
 <ul>
  <% task.errors.full_messages.each do |message|%>
     <li><%= message %></li>
  <% end %>   
 </ul>
<% end %>

<%= form_for(task) do |f| %>

<%=f.label :title, t(:title) %>
<%=f.text_field :title %><br>

<%=f.label :description, t(:description) %>
<%=f.text_area :description %><br>

<%=f.label :priority, t(:priority) %>
<%=f.select :priority, options_for_select(Task.select_options_by_priority),{} %><br>

<%=f.label :start_at, t(:start_at) %>
<%=f.date_field :start_at %><br>

<%=f.label :end_at, t(:end_at) %>
<%=f.date_field :end_at %><br>

<%= f.submit t(:submit)  %>
<% end %>